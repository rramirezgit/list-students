<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header" style="background-color: #ffefbb !important">
        <h1 class="h4 text-center">
          Registro de Usuario
        </h1>
      </div>
      <div class="card-body">
        <form action="/users/signup" method="POST">
          <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="Nombre" value="{{name}}">
          </div>
          <div class="form-group">
            <input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Contraseña" value="{{password}}">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="confirm_password" placeholder="Confirmar contraseña"
              value="{{confirm_password}}">
          </div>
          <button class="btn btn-block btn-dark btn-lg" style="background-color: #010101 !important">
            Registrar
          </button>
        </form>
      </div>
    </div>
  </div>
</div>