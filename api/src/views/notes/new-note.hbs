<div class="col-md-4 mx-auto">
  <div class="card ">
    <div class="card-header text-center">
      <h3>Nueva Nota</h3>
    </div>
    <div class="card-body">
      <form action="/notes/new-note" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <input type="text" name="title" class="form-control" placeholder="Titulo" autofocus />
        </div>
        <div class="form-group">
          <textarea name="description" class="form-control" placeholder="Descripcion"></textarea>
        </div>
          <p>Cargar Imagen (Opcional)</p>
        <div class="form-group">
          <input type="file" name="image" accept="image/*" style="width: 100%;">
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>